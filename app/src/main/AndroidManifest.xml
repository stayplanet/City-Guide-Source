<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.niteshsahni.cityguidepro" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="xyz.niteshsahni.cityguidepro.activity.SplashScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="xyz.niteshsahni.cityguidepro.activity.ListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="xyz.niteshsahni.cityguidepro.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/HomeTheme" >
        </activity>
        <activity
            android:name="xyz.niteshsahni.cityguidepro.activity.SearchResultsActivity"
            android:label="@string/app_name" >
        </activity>
        <!-- <activity -->
        <!-- android:name=".activity.ListActivity" -->
        <!-- android:label="@string/app_name" > -->
        <!-- </activity> -->
        <activity
            android:name="xyz.niteshsahni.cityguidepro.activity.ListDetailsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="xyz.niteshsahni.cityguidepro.activity.MapViewActivity"
            android:label="@string/app_name" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="xyz.niteshsahni.cityguidepro.activity.MapsActivity"
            android:label="@string/title_activity_maps" >
        </activity>
        <activity
            android:name="xyz.niteshsahni.cityguidepro.geoloc.GeoLocActivity"
            android:label="@string/title_activity_maps" >
        </activity>
        <activity
            android:name="xyz.niteshsahni.cityguidepro.geoloc.GeoLoccActivity"
            android:label="@string/title_activity_maps" >
        </activity>
        <activity
            android:name="xyz.niteshsahni.cityguidepro.activity.FindUsActivity"
            android:label="@string/title_activity_main2" >
        </activity>
        <activity
            android:name="xyz.niteshsahni.cityguidepro.activity.DroidWebViewActivity"
            android:label="@string/title_activity_main2" >
        </activity>
        <activity
            android:name="xyz.niteshsahni.cityguidepro.activity.DrivingDetailsActivity"
            android:label="@string/title_activity_driving_details" >
        </activity>
        <activity
            android:name="xyz.niteshsahni.cityguidepro.activity.AboutUsActivity"
            android:label="@string/title_activity_about_us" >
        </activity>
        <!--Include the AdActivity configChanges and theme. -->
        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
    </application>

</manifest>
